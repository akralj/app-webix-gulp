Joi = require("joi")

module.exports = Joi.object().keys(
  _id: Joi.string().min(3).max(100)
  #id: Joi.string().min(3).max(100)
  acceptPrivacyPolicy: Joi.boolean().invalid(false)
  addressLocality: Joi.string().min(3).max(100).required()
  attendees: Joi.number().integer().min(1).max(71).required()
  comment: Joi.string().allow('')
  createdAt: Joi.string().isoDate()
  email: Joi.string().email().required()
  start_date: Joi.string().isoDate()# .min("now").required() # does not work for updates!!
  end_date: Joi.string().isoDate()#.min(Joi.ref('start_date'))
  familyName: Joi.string().min(1).max(55).required()
  givenName: Joi.string().min(1).max(55).required()
  history: Joi.any()
  organisation: Joi.string()
  pfarre: Joi.string().allow('')
  postalCode: Joi.number().integer().min(100).max(100000).required()
  resourceId: Joi.number().integer().min(1).max(100).required()
  statusId: Joi.number().integer().min(1).max(10).required()
  status_bb: Joi.boolean().required()
  status_fb: Joi.boolean().required()
  status_fr: Joi.boolean().required()
  status_fr_till: Joi.string().isoDate()
  status_hv: Joi.boolean().required()
  status_rb: Joi.boolean().required()
  status_st: Joi.boolean().required()
  status_va: Joi.boolean().required()
  #status_confirmed: Joi.boolean().required()
  streetAddress: Joi.string().min(3).max(100).required()
  tarifId: Joi.number().integer().min(1).max(100)
  telephone: Joi.string().min(3).max(100).required()
  type: Joi.string()
  user: Joi.string().allow('')
  updatedAt: Joi.string().isoDate()
)

